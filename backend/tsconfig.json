{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["api/**/*", "lib/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
